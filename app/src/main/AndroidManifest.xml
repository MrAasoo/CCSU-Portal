<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.college.portal">
    <!-- Application Permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CollegePortal"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".activity.VisionMissionActivity"
            android:exported="false" />
        <activity
            android:name=".activity.CollegeGalleryImageActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.CollegeGalleryImageListActivity"
            android:configChanges="orientation"
            android:label="@string/photos" />
        <activity
            android:name=".activity.CollegeGalleryVideoActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.CollegeGalleryVideoListActivity"
            android:configChanges="orientation"
            android:label="@string/videos" />
        <activity
            android:name=".activity.AboutUsActivity"
            android:configChanges="orientation"
            android:label="@string/about_us" />
        <activity
            android:name=".activity.NoInternetActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.ClubsActivity"
            android:configChanges="orientation"
            android:label="@string/clubs" />
        <activity
            android:name=".activity.LibraryActivity"
            android:configChanges="orientation"
            android:label="@string/library" />
        <activity
            android:name=".activity.ContactUsActivity"
            android:configChanges="orientation"
            android:label="@string/contact_us" />
        <activity
            android:name=".activity.MessagesActivity"
            android:configChanges="orientation"
            android:label="@string/messages" />
        <activity
            android:name=".activity.NewsActivity"
            android:configChanges="orientation"
            android:label="@string/college_news" />
        <activity
            android:name=".activity.NewsListActivity"
            android:configChanges="orientation"
            android:label="@string/college_news" />
        <activity
            android:name=".activity.WebViewActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.AssignmentActivity"
            android:configChanges="orientation"
            android:label="@string/assignment" />
        <activity
            android:name=".activity.AssignmentListActivity"
            android:configChanges="orientation"
            android:label="@string/assignment" />
        <activity
            android:name=".activity.SettingActivity"
            android:configChanges="orientation"
            android:label="@string/settings" />
        <activity
            android:name=".activity.AppInfoActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.ProfileActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.AccountStatus"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.HomeActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.SignInActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.SplashScreen"
            android:configChanges="orientation"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".services.NetworkServices"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>