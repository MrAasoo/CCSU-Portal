<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.CollegePortal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_200</item>
        <item name="colorSecondaryVariant">@color/secondary_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- Application default padding margin -->
    <style name="DefaultMarginPadding" parent="Theme.CollegePortal">
        <item name="android:layout_margin">@dimen/four_dp</item>
        <item name="android:padding">@dimen/eight_dp</item>
    </style>

    <!-- Application Option Text -->
    <style name="AppTitleText" parent="DefaultMarginPadding">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Application Option Text -->
    <style name="AppOptionText" parent="DefaultMarginPadding">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <!--Application option text with drawable-->
    <style name="DrawableNextTintSecondary" parent="AppOptionText">
        <item name="drawableEndCompat">@drawable/ic_next</item>
        <item name="drawableTint">@color/secondary_700</item>
    </style>


</resources>