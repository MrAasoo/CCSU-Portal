<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/sixteen_dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/eight_dp">

        <TextView
            android:id="@+id/assi_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Assignment Name"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/assi_message"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Here show assignment on etc."
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/assi_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Submission Date :"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/assi_click"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/click_to_view"
            android:textAlignment="viewEnd"
            android:textColor="@color/light_blue_700"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </LinearLayout>
</androidx.cardview.widget.CardView>