<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/scrolling_appbar_height"
        android:background="@drawable/background_2"
        android:fitsSystemWindows="true"
        android:theme="@style/Theme.CollegePortal">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="Student Name">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- User Image -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="80dp"
                    app:cardElevation="@dimen/eight_dp"
                    app:layout_collapseMode="parallax">

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/background_gradient_light">

                        <androidx.cardview.widget.CardView
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_centerInParent="true"
                            app:cardCornerRadius="70dp">

                            <ImageView
                                android:id="@+id/std_image"
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:contentDescription="@string/student_s_image"
                                android:elevation="@dimen/eight_dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_app_icon" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/greet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/image"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:hint="@string/welcome"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </RelativeLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/eight_dp">

            <!-- ID Branch -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sixteen_dp"
                app:cardCornerRadius="@dimen/sixteen_dp"
                app:cardElevation="@dimen/four_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/eight_dp">

                    <TextView
                        android:id="@+id/std_department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="@string/student_department"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/secondary_700" />

                    <TextView
                        android:id="@+id/std_branch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="@string/student_branch"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/secondary_700" />

                    <TextView
                        android:id="@+id/std_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="@string/student_id"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/secondary_700" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alignmentMode="alignMargins"
                android:columnCount="@integer/grid_column_count"
                android:orientation="horizontal"
                android:padding="@dimen/four_dp">

                <!-- Profile -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="@dimen/eight_dp"
                    app:cardElevation="@dimen/four_dp">

                    <RelativeLayout
                        android:id="@+id/home_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_profile"
                            android:backgroundTint="@color/secondary_700"
                            android:tintMode="add" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/students_profile"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Assignment -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="@dimen/eight_dp"
                    app:cardElevation="@dimen/four_dp">

                    <RelativeLayout
                        android:id="@+id/home_assignment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_assignment"
                            android:backgroundTint="@color/secondary_700"
                            android:tintMode="add" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/assignment"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Attendance -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="@dimen/eight_dp"
                    app:cardElevation="@dimen/four_dp">

                    <RelativeLayout
                        android:id="@+id/home_attendance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_attendance"
                            android:backgroundTint="@color/secondary_700"
                            android:tintMode="add" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/attendance"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Subjects -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="@dimen/eight_dp"
                    app:cardElevation="@dimen/four_dp">

                    <RelativeLayout
                        android:id="@+id/home_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_calendar"
                            android:backgroundTint="@color/secondary_700"
                            android:tintMode="add" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/subjects"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Library -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="@dimen/eight_dp"
                    app:cardElevation="@dimen/four_dp">

                    <RelativeLayout
                        android:id="@+id/home_library"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_lib"
                            android:backgroundTint="@color/secondary_700"
                            android:scaleType="centerCrop"
                            android:tintMode="screen" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/library"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- News -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="@dimen/eight_dp"
                    app:cardElevation="@dimen/four_dp">

                    <RelativeLayout
                        android:id="@+id/home_news"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_news"
                            android:backgroundTint="@color/secondary_700"
                            android:scaleType="centerCrop"
                            android:tintMode="screen" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/college_news"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Messages -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="@dimen/eight_dp"
                    app:cardElevation="@dimen/four_dp">

                    <RelativeLayout
                        android:id="@+id/home_notifications"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_notification"
                            android:backgroundTint="@color/secondary_700"
                            android:scaleType="centerCrop"
                            android:tintMode="screen" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/messages"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Clubs -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="@dimen/eight_dp"
                    app:cardElevation="@dimen/four_dp">

                    <RelativeLayout
                        android:id="@+id/home_club"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_club"
                            android:backgroundTint="@color/secondary_700"
                            android:scaleType="centerCrop"
                            android:tintMode="screen" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/clubs"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Contacts -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="@dimen/eight_dp"
                    app:cardElevation="@dimen/four_dp">

                    <RelativeLayout
                        android:id="@+id/home_contact"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_contact"
                            android:backgroundTint="@color/secondary_700"
                            android:scaleType="centerCrop"
                            android:tintMode="screen" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/contact_us"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- About -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="@dimen/eight_dp"
                    app:cardElevation="@dimen/four_dp">

                    <RelativeLayout
                        android:id="@+id/home_about_us"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_about"
                            android:backgroundTint="@color/secondary_700"
                            android:scaleType="centerCrop"
                            android:tintMode="screen" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/about_us"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Settings -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="@dimen/eight_dp"
                    app:cardElevation="@dimen/four_dp">

                    <RelativeLayout
                        android:id="@+id/home_settings"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_settings"
                            android:backgroundTint="@color/secondary_700"
                            android:scaleType="centerCrop"
                            android:tintMode="screen" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/settings"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Logout -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="@dimen/eight_dp"
                    app:cardElevation="@dimen/four_dp">

                    <RelativeLayout
                        android:id="@+id/home_logout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_logout"
                            android:backgroundTint="@color/secondary_700"
                            android:scaleType="centerCrop"
                            android:tintMode="screen" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/logout"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

            <Button
                android:id="@+id/enquiry"
                android:layout_width="@dimen/enq_button_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/four_dp"
                android:drawableEnd="@drawable/ic_enq"
                android:paddingHorizontal="@dimen/thirty_two_dp"
                android:text="@string/enquiry"
                android:textAllCaps="false"
                app:cornerRadius="@dimen/sixteen_dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
