<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/background_2"
        android:fitsSystemWindows="true"

        android:theme="@style/Theme.CollegePortal">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="Student Name">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- User Image -->
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center_horizontal"
                    android:elevation="@dimen/eight_dp"
                    app:cardBackgroundColor="@color/color_p_500"
                    app:cardCornerRadius="90dp"
                    app:layout_collapseMode="parallax">

                    <RelativeLayout
                        android:layout_width="180dp"
                        android:layout_height="180dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_centerInParent="true"
                            app:cardCornerRadius="80dp">

                            <ImageView
                                android:id="@+id/std_image"
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:contentDescription="@string/student_s_image"
                                android:elevation="@dimen/eight_dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_app_icon" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/greet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:hint="@string/welcome"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/eight_dp"
            android:orientation="vertical">

            <!-- ID Branch -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="3"
                android:layout_columnWeight="2"
                android:layout_margin="@dimen/sixteen_dp"
                app:cardCornerRadius="@dimen/sixteen_dp"
                app:cardElevation="@dimen/eight_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/eight_dp">

                    <TextView
                        android:id="@+id/std_department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="@string/student_branch"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                    <TextView
                        android:id="@+id/std_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="@string/student_id"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/light_blue_700" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:columnOrderPreserved="false">


                <!-- Row 1 Profile and Attendance-->
                <!-- Column 1 Profile -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/home_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_profile"
                            android:backgroundTint="@color/color_p_900"
                            android:tintMode="add" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/students_profile"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Column 2 Assignment -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/home_assignment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_assignment"
                            android:backgroundTint="@color/color_p_900"
                            android:scaleType="centerCrop"
                            android:tintMode="screen" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/assignment"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Row 2 -->
                <!-- Column 1 News -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/home_library"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_lib"
                            android:backgroundTint="@color/color_p_900"
                            android:scaleType="centerCrop"
                            android:tintMode="screen" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/library"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <!-- Column 1 News -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/home_news"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_news"
                            android:backgroundTint="@color/color_p_900"
                            android:scaleType="centerCrop"
                            android:tintMode="screen" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/collage_news"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Column 1 Notification -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/home_notifications"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_notification"
                            android:backgroundTint="@color/color_p_900"
                            android:scaleType="centerCrop"
                            android:tintMode="screen" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/messages"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Row 3 -->
                <!-- Column 1 Contacts -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/home_contact"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_contact"
                            android:backgroundTint="@color/color_p_900"
                            android:scaleType="centerCrop"
                            android:tintMode="screen" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/contact_us"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- About -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/home_about_us"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_about"
                            android:backgroundTint="@color/color_p_900"
                            android:scaleType="centerCrop"
                            android:tintMode="screen" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/about_us"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <!-- Clubs -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/home_club"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_club"
                            android:backgroundTint="@color/color_p_900"
                            android:scaleType="centerCrop"
                            android:tintMode="screen" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/clubs"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Settings -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/home_settings"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_settings"
                            android:backgroundTint="@color/color_p_900"
                            android:scaleType="centerCrop"
                            android:tintMode="screen" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/settings"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Logout -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/sixteen_dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/home_logout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="cardViewClicked"
                        android:orientation="vertical"
                        android:padding="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/card_image_width"
                            android:layout_height="@dimen/card_image_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/thirty_two_dp"
                            android:background="@drawable/ic_logout"
                            android:backgroundTint="@color/color_p_900"
                            android:scaleType="centerCrop"
                            android:tintMode="screen" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:text="@string/logout"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </GridLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>