<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_dark"
    tools:context=".activity.AboutUsActivity">

    <include
        layout="@layout/app_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical"
        android:padding="@dimen/eight_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- TODO Update Card background with images -->
        <!--Our Mission-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/eight_dp"
            app:cardCornerRadius="@dimen/eight_dp"
            app:cardElevation="@dimen/eight_dp">

            <TextView
                android:id="@+id/about_mission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:drawableEnd="@drawable/ic_next"
                android:padding="@dimen/sixteen_dp"
                android:text="@string/our_mission"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </androidx.cardview.widget.CardView>

        <!--Our Vision-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/eight_dp"
            app:cardCornerRadius="@dimen/eight_dp"
            app:cardElevation="@dimen/eight_dp">

            <TextView
                android:id="@+id/about_vision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:drawableEnd="@drawable/ic_next"
                android:padding="@dimen/sixteen_dp"
                android:text="@string/our_vision"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="@dimen/eight_dp"
            android:background="@drawable/background_gradient_dark" />

        <!--History-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/eight_dp"
            app:cardCornerRadius="@dimen/eight_dp"
            app:cardElevation="@dimen/eight_dp">

            <TextView
                android:id="@+id/about_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:drawableEnd="@drawable/ic_next"
                android:padding="@dimen/sixteen_dp"
                android:text="@string/history"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </androidx.cardview.widget.CardView>


        <!--Photos-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/eight_dp"
            app:cardCornerRadius="@dimen/eight_dp"
            app:cardElevation="@dimen/eight_dp">

            <TextView
                android:id="@+id/about_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:drawableEnd="@drawable/ic_next"
                android:padding="@dimen/sixteen_dp"
                android:text="@string/photos"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </androidx.cardview.widget.CardView>


        <!--Videos-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/eight_dp"
            app:cardCornerRadius="@dimen/eight_dp"
            app:cardElevation="@dimen/eight_dp">

            <TextView
                android:id="@+id/about_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:drawableEnd="@drawable/ic_next"
                android:padding="@dimen/sixteen_dp"
                android:text="@string/videos"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="@dimen/eight_dp"
            android:background="@drawable/background_gradient_dark" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>